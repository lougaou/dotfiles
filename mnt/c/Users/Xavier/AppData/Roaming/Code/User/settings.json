{
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[makefile]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[nginx]": {
        "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.formatOnSave": false
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "better-comments.tags": [
        {
            "backgroundColor": "transparent",
            "bold": false,
            "color": "#FF2D00",
            "italic": false,
            "strikethrough": false,
            "tag": "!",
            "underline": false
        },
        {
            "backgroundColor": "transparent",
            "bold": false,
            "color": "#3498DB",
            "italic": false,
            "strikethrough": false,
            "tag": "?",
            "underline": false
        },
        {
            "backgroundColor": "transparent",
            "bold": false,
            "color": "#474747",
            "italic": false,
            "strikethrough": true,
            "tag": "//",
            "underline": false
        },
        {
            "backgroundColor": "transparent",
            "bold": false,
            "color": "#FF8C00",
            "italic": false,
            "strikethrough": false,
            "tag": "todo",
            "underline": false
        },
        {
            "backgroundColor": "transparent",
            "bold": false,
            "color": "#98C379",
            "italic": false,
            "strikethrough": false,
            "tag": "*",
            "underline": false
        }
    ],
    "css.enabledLanguages": [
        "html",
        "twig"
    ],
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "css.styleSheets": [
        "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",
        "${fileBasenameNoExtension}.css"
    ],
    "css.validate": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnCommitCharacter": false, // Evite que l'autocomplétion soit accepté lors d'un . par exemple
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    "editor.largeFileOptimizations": false,
    "editor.linkedEditing": true, // Quand on change un élément HTML, change la balise fermante
    "editor.quickSuggestions": {
        "comments": true,
        "other": true,
        "strings": true
    },
    "workbench.colorCustomizations": {
        "[Dracula]": {
            "editor.selectionBackground": "#3D59A1",
            "editor.selectionHighlightBackground": "#3D59A1"
        },
    },
    "editor.renderWhitespace": "trailing",
    "editor.snippetSuggestions": "top",
    "editor.suggest.insertMode": "replace", // L'autocomplétion remplace le mot en cours
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "plaintext": "pug",
        "razor": "html",
        "twig": "html"
    },
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "eslint.alwaysShowStatus": true,
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.format.enable": true,
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "files.associations": {
        ".browserslistrc": "plaintext",
        "*.conf.dist": "NGINX",
        "*.htm": "html",
        "*.html": "html",
        "*.md.dist": "markdown",
        "*.neon.dist": "yaml",
        "*.twig": "html",
        "*.xml.dist": "xml",
        "*.yaml.dist": "yaml",
        "Dockerfile*": "dockerfile"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.eol": "\n",
    "git.confirmSync": false,
    "gitlens.currentLine.enabled": true,
    "html.format.indentHandlebars": true,
    "htmlhint.documentSelector": [
        "html",
        "htm",
        "twig"
    ],
    "javascript.updateImportsOnFileMove.enabled": "never",
    "less.validate": false,
    "namespaceResolver.sortAlphabetically": true,
    "npm.enableRunFromFolder": true,
    "php-cs-fixer.allowRisky": true,
    "php-cs-fixer.autoFixByBracket": true,
    "php-cs-fixer.autoFixBySemicolon": true,
    "php-cs-fixer.config": "${workspaceFolder}/tools/phpcs-fixer/.php-cs-fixer.dist.php",
    "php-cs-fixer.documentFormattingProvider": true,
    "php-cs-fixer.exclude": [],
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.formatHtml": true,
    "php-cs-fixer.lastDownload": 1673776124541,
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.pathMode": "override",
    "php.suggest.basic": false,
    "phpmd.rules": "${workspaceFolder}/tools/phpmd/phpmd.xml.dist",
    "phpmd.validate.executablePath": "${workspaceFolder}/tools/phpmd/vendor/bin/phpmd",
    "phpmd.validate.rulesetsFile": "${workspaceFolder}/tools/phpmd/phpmd.xml.dist",
    "phpmd.verbose": true,
    "phpstan.path": "${workspaceFolder}/tools/phpstan/vendor/bin/phpstan",
    "psalm.enableVerbose": true,
    "redhat.telemetry.enabled": false,
    "scss.lint.unknownAtRules": "ignore",
    "scss.validate": false,
    "security.workspace.trust.untrustedFiles": "open",
    "sonarlint.disableTelemetry": true,
    "sonarlint.ls.javaHome": "c:\\Users\\Xavier\\.vscode\\extensions\\sonarsource.sonarlint_managed-jre\\jre\\jdk-11.0.14.1+1-jre",
    "sonarlint.rules": {
