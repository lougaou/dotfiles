    "sonarlint.testFilePattern": "{**/test/**,**/*test*,**/*Test*}",
    "sortJSON.contextMenu": {
        "sortJSON": false,
        "sortJSONAlphaNum": true,
        "sortJSONAlphaNumReverse": false,
        "sortJSONKeyLength": false,
        "sortJSONKeyLengthReverse": false,
        "sortJSONReverse": false,
        "sortJSONType": false,
        "sortJSONTypeReverse": false,
        "sortJSONValues": false,
        "sortJSONValuesReverse": false
    },
    "stylelint.configFile": "${workspaceFolder}/.stylelintrc",
    "stylelint.validate": [
        "css",
        "scss"
    ],
    "telemetry.telemetryLevel": "error",
    "terminal.integrated.defaultProfile.windows": "Ubuntu-20.04 (WSL)",
    "todo-tree.general.tags": [
        "HACK",
        "FIXME",
        "TODO",
        "TO BE CONFIRMED"
    ],
    "todo-tree.highlights.customHighlight": {
        "FIXME": {
            "background": "#ff0000",
            "foreground": "#ffffff",
            "gutterIcon": true,
            "icon": "tools",
            "iconColour": "#ff0000",
            "opacity": 100,
            "type": "text-and-comment"
        },
        "HACK": {
            "background": "#00de00",
            "foreground": "#fff",
            "gutterIcon": true,
            "icon": "beaker",
            "iconColour": "#00de00",
            "opacity": 100,
            "type": "text-and-comment"
        },
        "TO BE CONFIRMED": {
            "background": "#ffff00",
            "foreground": "#000",
            "gutterIcon": true,
            "icon": "cross-reference",
            "iconColour": "#ffff00",
            "opacity": 100,
            "type": "text-and-comment"
        },
        "TODO": {
            "background": "#0000cc",
            "foreground": "#ffffff",
            "gutterIcon": true,
            "icon": "tools",
            "iconColour": "#0000cc",
            "opacity": 100,
            "type": "text-and-comment"
        }
    },
    "typescript.updateImportsOnFileMove.enabled": "never",
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Dracula",
    "workbench.editor.enablePreview": false, // Un clic sur un fichier l'ouvre
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.indent": 15,
    "yaml.format.singleQuote": true,
    "CodeGPT.query.language": "English",
    "intelephense.telemetry.enabled": false,
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Tests,tests}/**",
        "**/.history/**",
        "**/vendor/**/vendor/**",
        "**/tools/**"
    ]
