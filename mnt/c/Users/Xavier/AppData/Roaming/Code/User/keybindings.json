// Placer vos combinaisons de touches dans ce fichier pour remplacer les valeurs par défaut
[
    {
        "key": "ctrl+shift+u",
        "command": "editor.action.transformToUppercase"
    },
    {
        "key": "ctrl+alt+l",
        "command": "lorem-ipsum.paragraph",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+g",
        "command": "phpGetterSetter.insertGetterAndSetter"
    },

    // Etend la sélection
    {
        "key": "ctrl+d",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    // Trouve toutes les occurences du mot sélectionné
    {
        "key": "shift+ctrl+d",
        "command": "editor.action.selectHighlights",
        "when": "editorFocus"
    },
    // Crée un nouveau fichier
    {
        "key": "ctrl+n",
        "command": "explorer.newFile"
    }
]